@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="@Styles.Url("~/content/css")" rel="stylesheet"/>
        @RenderSection("head", required: false)
        @Html.Partial("_html5shiv")
        <link rel="icon" href="favicon.ico" type="image/x-icon">
        <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
        <link rel="apple-touch-icon" sizes="57x57" href="@Url.Content("~/Content/images/apple-touch-icon-57x57-precomposed.png")" />
        <link rel="apple-touch-icon" sizes="72x72" href="@Url.Content("~/Content/images/apple-touch-icon-72x72-precomposed.png")" />
        <link rel="apple-touch-icon" sizes="114x114" href="@Url.Content("~/Content/images/apple-touch-icon-114x114-precomposed.png")" />
        <link rel="apple-touch-icon" sizes="144x144" href="@Url.Content("~/Content/images/apple-touch-icon-144x144-precomposed.png")" />
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="#" title="Stephen's playground for web technologies">Web Sandbox</a>
                    <div class="nav-collapse collapse">
                          @Html.Navigation()
                    </div>
                </div>
            </div>
        </div>        
        <div class="container">
            @Html.Partial("_alerts")
            @Html.Partial("_validationSummary")
            @RenderBody()   
            <hr>
            <footer>
                <p>&copy; Company @System.DateTime.Now.ToString("yyyy")</p>
            </footer> 
        </div>
         @Scripts.Render("~/js")
         @RenderSection("Scripts", required: false)
    </body>
</html>

